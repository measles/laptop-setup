	name = Andrej Zacharevicz
	email = andrej@zahar.ws
[core]
	editor = vim
	excludesfile = ~/.gitignore
	autocrlf = input
[merge]
	tool = vimdiff
[alias]
	st = status
	co = commit
	ch = checkout
	ps = push
	pl = pull
	fe = fetch

	spu = stash push
	sls = stash list
	sap = stash apply
	spo = stash pop
	ssh = stash show
	sdr = stash drop
[pull]
	rebase = true
